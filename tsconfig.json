{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "newLine": "lf",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    // "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "hgl.h",
    "downlevelIteration": true,
    "lib": [
      "webworker",
      "dom",
      "es2015",
      "es2017",
      "es2016",
      "es2018",
      "esnext"
    ],
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "outDir": "lib",
    "types": [],
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "hypergl": [
        "./src"
      ],
      "hypergl/plugins/key": [
        "./plugins/key"
      ],
      "hypergl/plugins/physics": [
        "./plugins/physics"
      ],
      "hypergl/plugins/load": [
        "./plugins/load"
      ],
      "hypergl/plugins/stat": [
        "./plugins/stat"
      ],
      "hypergl/plugins/pointer": [
        "./plugins/pointer"
      ]
    }
  },
  "include": [
    "src",
    "typings",
    "tests",
    "testsOnbrowser",
    "demo"
  ],
  "exclude": [
    "node_modules",
    "plugins/load/gltf-loader-ts",
    "demo/gltfloader.ts",
    "demo/index2.ts",
    "demo/index3.ts",
    "demo/index4.ts",
    "demo/index5.ts",
    "demo/index6.ts",
    "demo/index7.ts"
  ]
}