{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "hpc.h",
    "lib": [
      "webworker",
      "dom",
      "es2015",
      "es2017",
      "es2016",
      "es2018",
      "esnext"
    ],
    "noImplicitAny": false,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "outDir": "build/output",
    "types": [
    ],
    "allowSyntheticDefaultImports": true
  },
  "files": [
    "src/**/*"
  ],
  "include": [
    "src","typings"
  ],
  "exclude": [
    "node_modules"
  ]
}